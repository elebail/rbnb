<div class="background">
  <div class="container text-center">
    <h1 class="pt-5 pb-4 text-white">CHOOSE YOUR SPACECRAFT !</h1>
    <%= form_tag spaceships_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "searchTerm",
        placeholder: "Find a spaceship"
      %>
      <%= submit_tag ("search"), class: "searchButton"%>
    <% end %>
  <div class="row justify-content-center">
    <% @spaceships.each do |spaceship| %>
      <%#= link_to spaceship_path(spaceship) do %>
        <%= render 'shared/card', spaceship: spaceship %>
        <%# end %>
      <% end %>
    </div>
  </div>
</div>
